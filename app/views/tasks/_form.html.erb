<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "個のエラー") %> を修正してください:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, "説明文" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :due_date, "期限" %>
    <%= form.date_select :due_date %>
  </div>

  <div class="actions">
    <%= form.submit task.new_record? ? 'タスクを作成' : 'タスクを更新', class: 'btn btn-primary' %>
  </div>
<% end %>
