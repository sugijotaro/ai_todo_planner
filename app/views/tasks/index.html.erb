<h1>AI ToDoリスト</h1>
<%= link_to 'タスクを作成', new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to (task.completed ? '未完了にする' : '完了にする'), complete_task_path(task), method: :put %>
      <%= link_to task.title, task_path(task) %>
      （未完了のサブタスク: <%= task.sub_tasks.where(completed: false).count %>）
    </li>
  <% end %>
</ul>
